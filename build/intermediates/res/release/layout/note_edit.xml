<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent"

	android:background="#ff000000"

	 tools:context=".MainActivity">

	<Button
		android:background="#ff05002e"
		android:onClick="cutUpText"

		android:textColor="#fffff965"
		android:layout_width="170dp"
		android:layout_height="30dp"
		android:text="Cut me up!"
		android:id="@+id/doIt"
		android:layout_alignParentTop="true" />

	<EditText

		android:gravity="top|left"
		android:background="#ffd7d5ff"
		android:textColor="#ff000000"
		android:layout_width="450dp"
		android:layout_height="300dp"
		android:inputType="textMultiLine"
		android:ems="10"
		android:id="@+id/input"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true" />

	<EditText
		android:gravity="top|left"
		android:background="#ff2c4aff"
		android:textColor="#d5ccff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/title"
		android:layout_below="@+id/doIt"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignRight="@+id/input"
		android:layout_alignEnd="@+id/input"
		android:layout_above="@+id/input" />

	<Button
		android:textColor="#fffff965"
		android:background="#ff05002e"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Save Note"
		android:id="@+id/confirm"
		android:layout_above="@+id/title"
		android:layout_toRightOf="@+id/doIt"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true" />

</RelativeLayout>
